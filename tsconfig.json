{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist/tsc", // unused (see Webpack + Babel config instead)
    "module": "commonjs",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@e2e/*": ["e2e/*"]
    }
  },
  "exclude": ["dist/"]
}
